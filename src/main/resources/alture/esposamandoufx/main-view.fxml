<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="alture.esposamandoufx.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <top>
        <VBox spacing="10.0">
            <Label text="Minha esposa mandou eu comprar : " style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Lista de Compras">
                <VBox spacing="10.0">
                    <Label text="Compras:"/>
                    <TableView fx:id="shoppingListTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="itemNameColumn" text="Item" prefWidth="200"/>
                            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
                        </columns>
                    </TableView>

                    <Separator/>
                    <HBox spacing="10.0">
                        <Button text="Adicionar Compra" onAction="#adicionarBotaoOnClick" prefWidth="100"/>
                        <Button text="Deleter Compra" onAction="#deletarBotaoOnClick" prefWidth="100"/>
                        <Button text="Limpar Tudo" onAction="#limparBotaoOnClick" prefWidth="100"/>
                    </HBox>

                </VBox>
            </Tab>
            <Tab text="Histórico de Compras">
                <VBox spacing="10.0">
                    <Label text="Histórico:"/>
                    <TableView fx:id="purchaseHistoryTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="historyItemNameColumn" text="Item" prefWidth="150"/>
                            <TableColumn fx:id="historyQuantityColumn" text="Quantity" prefWidth="100"/>
                            <TableColumn fx:id="historyDateColumn" text="Purchase Date" prefWidth="200"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Label fx:id="statusLabel" HBox.hgrow="ALWAYS"/>
            <Button text="Refresh Lists" onAction="#atualizarBotao"/>
        </HBox>
    </bottom>
</BorderPane>
